package javadoc;
public class Alumno extends Persona {

    /**
     * Número de expediente del alumno.
     */
    private int numeroExpediente;

    /**
     * Crea un nuevo objeto de la clase `Alumno`.
     *
     * @param nombre Nombre del alumno.
     * @param apellidos Apellidos del alumno.
     * @param edad Edad del alumno.
     * @param numeroExpediente Número de expediente del alumno.
     */
    public Alumno(String nombre, String apellidos, int edad, int numeroExpediente) {
        super(nombre, apellidos, edad);
        this.numeroExpediente = numeroExpediente;
    }

    /**
     * Devuelve el número de expediente del alumno.
     *
     * @return Número de expediente del alumno.
     */
    public int getNumeroExpediente() {
        return numeroExpediente;
    }

    /**
     * Establece el número de expediente del alumno.
     *
     * @param numeroExpediente Nuevo número de expediente del alumno.
     */
    public void setNumeroExpediente(int numeroExpediente) {
        this.numeroExpediente = numeroExpediente;
    }

    /**
     * Devuelve una representación en cadena del alumno.
     *
     * @return Representación en cadena del alumno.
     */
    @Override
    public String toString() {
        return super.toString() + ", numeroExpediente=" + numeroExpediente;
    }
}
